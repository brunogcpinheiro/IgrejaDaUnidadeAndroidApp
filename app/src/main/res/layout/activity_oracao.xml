<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_celula"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brunogcpinheiro.igrejadaunidade.VersiculoActivity">

    <ImageView
        android:id="@+id/oracaoImage"
        android:src="@drawable/azeite"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.brunogcpinheiro.igrejadaunidade.helper.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oração"
        android:textSize="24sp"
        android:layout_alignRight="@id/oracaoImage"
        android:layout_alignBottom="@id/oracaoImage"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/oracao_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/oracaoImage">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:fabSize="mini"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:id="@+id/insert_point"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></LinearLayout>

</RelativeLayout>